generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Token {
  id        Int      @id @default(autoincrement())
  ip        String
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model AdminMessage {
  id        Int      @id @default(autoincrement())
  message   String
  sent      Boolean  @default(false)
  createdAt DateTime @default(now())
  sentAt    DateTime?
}