{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "description": "ConfiguraciÃ³n de Renovate para monorepo ZypherLink (Unity + Node.js)",
  "enabledManagers": ["npm"],
  "ignorePaths": [
    "**/Assets/**",
    "**/ProjectSettings/**",
    "**/Packages/**",
    "**/*.unity",
    "**/*.meta"
  ],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "groupName": "node dependencies",
      "groupSlug": "node-deps",
      "schedule": ["at any time"],
      "enabled": true
    }
  ],
  "labels": ["dependencies", "node"],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 4,
  "timezone": "Europe/Madrid",
  "platform": "github",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ“¦ Renovate Dependency Dashboard",
  "dependencyDashboardApproval": false
}
